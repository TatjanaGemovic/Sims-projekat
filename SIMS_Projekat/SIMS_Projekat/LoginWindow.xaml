<Window x:Class="SIMS_Projekat.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Projekat"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="0,-1,0,1">
        <Label Content="Zdravo" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" FontSize="60" FontFamily="Aileron Black"/>
        <Button Content="Prijavi se" HorizontalAlignment="Left" Width="80" Margin="351,307,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="Username" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,206,0,0"/>
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Korisnicko ime" HorizontalAlignment="Left" Margin="248,201,0,0" VerticalAlignment="Top"/>
        <Label Content="Lozinka" HorizontalAlignment="Left" Margin="267,243,0,0" VerticalAlignment="Top"/>
        <Label x:Name="WrongDataLabel" Content="" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,274,0,0"/>

    </Grid>
</Window>
