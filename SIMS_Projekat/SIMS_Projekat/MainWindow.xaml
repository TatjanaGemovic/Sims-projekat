    <Grid>
        <Button Background="#FF5959" Style="{StaticResource BiggerClassicButton}" Foreground="#222831" FontSize="34" BorderBrush="#DDDDDD" BorderThickness="8" Content="Pacijent" HorizontalAlignment="Left" VerticalAlignment="Top" Height="104" Width="220" Margin="162,290,0,0" FontFamily="Poppins Medium" Click="Button_Click_2"/>
        <Button Background="#FF5959" Style="{StaticResource BiggerClassicButton}" Foreground="#222831" BorderBrush="#DDDDDD" FontSize="34" BorderThickness="8" Content="Lekar" HorizontalAlignment="Left" VerticalAlignment="Center" Height="104" Width="220" Margin="162,0,0,0" FontFamily="Poppins Medium" Click="Button_Click"/>
