<Application x:Class="SIMS_Projekat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SIMS_Projekat"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="ClassicButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily"  Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF40BFEA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="110"/>
        </Style>
        <Style TargetType="Button" x:Key="BiggerClassicButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily"  Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FF40BFEA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="0,522,16,0"/>
        </Style>
        <Style TargetType="Button" x:Key="DoctorHomePageButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily"  Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFA2E1F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="135"/>
            <Setter Property="Width" Value="360"/>
            <Setter Property="Margin" Value="0,20,20,0"/>
        </Style>
        <Style TargetType="Button" x:Key="DoctorHomePageSmallButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontFamily"  Value="Segoe UI Symbol"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#FFA2E1F1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="Width" Value="170"/>
        </Style>
        <Style TargetType="DockPanel" x:Key="DockPanel">
            <Setter Property="Background" Value="#FFA7AFAF"/>
        </Style>

        
    <!--SecretaryView Styles-->
        
        <Style TargetType="RadioButton" x:Key="SecretaryViewRadioButton">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="{TemplateBinding Background}">
                                <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/icons/accounts.png" Width="20" Height="20" Margin="10"/>
                                <TextBlock Text="{TemplateBinding Property=Content}" VerticalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="10"/>
                <Setter Property="BorderBrush" Value="White"/>
                
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6fab4f"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="BorderThickness" Value="20,0,0,0"/>
                    <Setter Property="Background" Value="#4b7d31"/>
                    <Setter Property="BorderBrush" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style TargetType="Button" x:Key="SecretaryViewButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="#6fab4f"/>
                <Setter Property="Foreground" Value="White"/>
 
                <Setter Property="BorderThickness" Value="10"/>
                <Setter Property="BorderBrush" Value="White"/>
            </Style.Setters>
            
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4b7d31"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecretaryViewDeleteButton">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Style.Resources>
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Background" Value="Red"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style.Setters>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC90000"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Application.Resources>
</Application>
