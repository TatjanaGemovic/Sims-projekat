<Page x:Class="SIMS_Projekat.DoctorView.DoctorAppointments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_Projekat.DoctorView"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="430"
      Title="DoctorAppointments">

    <Grid>
        <DockPanel Margin="0,0,0,0">
            <Button Content="Kalendar" DockPanel.Dock="Top" Style="{StaticResource DoctorHomePageButton}" Margin="0,10,0,10"/>
            <Button Content="Zakazivanje" DockPanel.Dock="Top" Style="{StaticResource DoctorHomePageButton}" Margin="0,10,0,10" Click="Button_Click"/>
            <Button Content="Pregled" DockPanel.Dock="Top" Style="{StaticResource DoctorHomePageButton}" Margin="0,10,0,10" FontSize="36" />
            <Button Content="Notifikacije" Style="{StaticResource DoctorHomePageSmallButton}" Margin="26,-20,20,0" />
            <Button Content="Slobodni dani" Style="{StaticResource DoctorHomePageSmallButton}" Margin="0,-20,22,0"/>
        </DockPanel>
    </Grid>
</Page>
