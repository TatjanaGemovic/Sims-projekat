<Window x:Class="SIMS_Projekat.SecretaryHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Projekat"
        mc:Ignorable="d"
        Title="SecretaryHome" Height="450" Width="800"
        Background="YellowGreen"
        Closing="DataWindow_Closing">
    <Grid>
        <DataGrid x:Name="dataGridPatients" ItemsSource="{Binding Patients}" IsReadOnly="True" 
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Center"
                  Height="283" Margin="0,48,0,0" VerticalAlignment="Top" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding FirstName}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Prezime" Binding="{Binding LastName}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width ="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="100,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="Button_Click"/>
        <Button Content="Izmeni" HorizontalAlignment="Left" Margin="263,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="Button_Click_2"/>
        <Button Content="Prikazi" HorizontalAlignment="Left" Margin="426,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="Button_Click_3"/>
        <Button Content="Obrisi" HorizontalAlignment="Left" Margin="590,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="Button_Click_1"/>
    </Grid>

</Window>
