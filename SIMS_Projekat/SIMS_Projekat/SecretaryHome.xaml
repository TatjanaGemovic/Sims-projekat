<Window x:Class="SIMS_Projekat.SecretaryHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Projekat"
        mc:Ignorable="d"
        Title="SecretaryHome" Height="502" Width="800"
        Background="YellowGreen"
        Closing="DataWindow_Closing">
    
    <Window.Resources>
        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsUrgent}" Value="true">
                    <Setter Property="Background" Value="Red" />
                    <Setter Property="Foreground" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <DataGrid x:Name="dataGridPatients" ItemsSource="{Binding Path = Patients}" IsReadOnly="True" 
                  SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Center"
                  Height="283" Margin="0,48,0,0" VerticalAlignment="Top" Width="600">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ime" Binding="{Binding FirstName}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Prezime" Binding="{Binding LastName}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width ="*"></DataGridTextColumn>
                <DataGridTextColumn Header="Hitan slucaj" Binding="{Binding IsUrgent}" Width ="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="100,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="AddPatient"/>
        <Button Content="Izmeni" HorizontalAlignment="Left" Margin="263,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="EditPatient"/>
        <Button Content="Prikazi" HorizontalAlignment="Left" Margin="426,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="ShowPatient"/>
        <Button Content="Obrisi" HorizontalAlignment="Left" Margin="590,351,0,0" VerticalAlignment="Top" Height="50" Width="110" Click="DeletePatient"/>
        <Button Content="Hitni Slucajevi" HorizontalAlignment="Left" Margin="327,426,0,0" VerticalAlignment="Top" Height="37" Width="150" RenderTransformOrigin="0.5,0.5" Background="Red" Foreground="White" Click="Button_Click_4">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.417"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.393"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>

</Window>
