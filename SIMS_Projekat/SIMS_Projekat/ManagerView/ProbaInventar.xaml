<Page x:Class="SIMS_Projekat.ManagerView.ProbaInventar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_Projekat.ManagerView" 
      d:DataContext="{d:DesignData local:ProbaInventar}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="554"
      Title="ProbaInventar">

    <Grid Width="554">
        <Label Content="Oprema prostorije" HorizontalAlignment="Left" Margin="116,71,0,0" VerticalAlignment="Top"/>

        <DataGrid x:Name="equipmentDataGrid" ItemsSource="{Binding ppEquipment}"  Margin="89,104,304,89" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single" CanUserResizeRows="False"  AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="columnName" Binding ="{Binding Path=EquipmentName}" IsReadOnly="True" Header="naziv"  Width="*" CanUserResize="False"/>
                <DataGridTextColumn x:Name="columnType" Binding ="{Binding Path=pEquipmentType}" IsReadOnly="True" Header="tip"  Width="100" CanUserResize="False"/>

            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Odustani" HorizontalAlignment="Left" Height="44" Margin="396,287,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click"/>
        <Button Content="Premesti opremu" HorizontalAlignment="Left" Margin="396,164,0,0" VerticalAlignment="Top" Height="37" Width="105" Click="Button_Click_1"/>
        <Button Content="Premesti u magacin" HorizontalAlignment="Left" Margin="396,223,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.552,0.656" Height="37" Width="105" Click="Button_Click_2"/>
        <ListView  x:Name="lista" ItemsSource="{Binding ppEquipmentQ}" HorizontalAlignment="Left" Height="142" Margin="277,104,0,0" VerticalAlignment="Top" Width="69" >
            <ListView.View>
                <GridView >
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
