<Page x:Class="SIMS_Projekat.ManagerView.AddMedicineComponentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_Projekat.ManagerView" xmlns:managervalidation="clr-namespace:SIMS_Projekat.ManagerValidation"
      xmlns:ns="clr-namespace:MenuNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="554"
      Title="AddMedicineComponentView">

    <Border Style="{DynamicResource ManagerBorderMain}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="121*"></ColumnDefinition>
                <ColumnDefinition Width="155*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="85*"></RowDefinition>
                    <RowDefinition Height="319*"></RowDefinition>
                    <RowDefinition Height="44*"></RowDefinition>
                </Grid.RowDefinitions>

                <Label x:Name="Sastojci" Content="{ns:Loc Sastojci}" Style="{DynamicResource ManagerMainLabelPages}" Grid.Row="0" ></Label>
                <ListBox x:Name="ComponentList"  Grid.Row="1" Margin="10,5,20,5" SelectionChanged="ComponentList_SelectionChanged" ></ListBox>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="92*"></RowDefinition>
                    <RowDefinition Height="121*"></RowDefinition>
                    <RowDefinition Height="54*"></RowDefinition>
                    <RowDefinition Height="81*"></RowDefinition>
                    <RowDefinition Height="54*"></RowDefinition>
                    <RowDefinition Height="45*"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Column="1" Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="25,10,25,10" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label x:Name="UnesiteNoviSastojakLeka" Content="{ns:Loc UnesiteNoviSastojakLeka}" Grid.Row="0" Style="{DynamicResource LabelInButton}" HorizontalAlignment="Center" Margin="10,10,0,0"  VerticalAlignment="Top" Width="250"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBox  x:Name="SastojakTextBox" TextWrapping="Wrap"  Width="160" Height="30" VerticalAlignment="Center" Margin="10,0,0,0" TextChanged="SastojakTextBox_TextChanged" >
                                <TextBox.Text>
                                    <Binding Path="Sastojak" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <managervalidation:StringValidation/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Button x:Name="DodajBtn"  Content="{ns:Loc PotvrdiDodavanje}" Style="{DynamicResource ManagerButtonCRUDOk}" IsEnabled="False" HorizontalAlignment="Left"   VerticalAlignment="Center" Height="30" Width="70" Click="Button_Click" Margin="10,0,10,0"/>
                        </StackPanel>
                        
                    </Grid>
                </Border>
                <Button x:Name="Zavrsi" Grid.Row="4" Style="{DynamicResource ManagerButtonCRUDOk}" Margin="30,10,30,10"  Click="Button_Click_2">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/icon_manager/ManagerDone.png" Height="20" Width="20"/>
                        <Label Content="{ns:Loc Zavrsi}" Style="{DynamicResource LabelInButton}" Width="48" />
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteComponentBtn" Style="{DynamicResource ManagerButtonCRUDOk}" Grid.Row="2" Margin="30,10,30,10" IsEnabled="False" Click="Button_Click_1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/icon_manager/ManagerDelete.png" Height="20" Width="20" HorizontalAlignment="Left"/>
                        <Label  Content="{ns:Loc ObrisiSastojak}" Style="{DynamicResource LabelInButton}"/>
                    </StackPanel>
                </Button>
                
                
                

            </Grid>

        </Grid>
    </Border>
</Page>
