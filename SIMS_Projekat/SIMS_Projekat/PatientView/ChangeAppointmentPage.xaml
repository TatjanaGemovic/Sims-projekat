<Page x:Class="SIMS_Projekat.PatientView.ChangeAppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMS_Projekat.PatientView"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="ChangeAppointmentPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="284"/>
            <ColumnDefinition Width="Auto" MinWidth="205"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Izmena termina" HorizontalAlignment="Left" Height="102" Margin="10,10,0,0" VerticalAlignment="Top" Width="376" FontSize="48" FontWeight="Bold"/>
        <Label Content="Datum :" HorizontalAlignment="Left" Height="42" Grid.Row="1" VerticalAlignment="Top" Width="146" FontSize="24" Margin="50,50,0,0"/>
        <Label Content="Vreme :" HorizontalAlignment="Center" Height="35" Grid.Row="2" VerticalAlignment="Top" Width="170" FontSize="24" Margin="0,50,0,0"/>
        <Label Content="Izabrani lekar :" HorizontalAlignment="Center" Height="42" Grid.Row="3" VerticalAlignment="Top" Width="170" FontSize="24" Margin="0,50,0,0"/>
        <ComboBox Grid.Row="4" AllowDrop="True" x:Name="choose_doctor" Margin="58,50,26,0">
            <ComboBoxItem IsSelected="True" Height="50" >
                <TextBlock Text="Promeni lekara" FontSize="22" />
            </ComboBoxItem>
        </ComboBox>
        <CheckBox Content="  Napravi podsetnik" HorizontalAlignment="Left" Height="38" Grid.Row="5" VerticalAlignment="Top" Width="219" Margin="50,39,0,0" FontSize="22"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Background="White" Margin="0,45,0,1" FontSize="24" />
        <DatePicker x:Name="date" Grid.Column="1" HorizontalAlignment="Center" Height="30" Grid.Row="1" VerticalAlignment="Top" Width="175" Margin="0,62,0,0" FontSize="20" />
        <ComboBox Grid.Column="1" Grid.Row="2" AllowDrop="True" x:Name="combotime" Margin="58,50,26,0" BorderBrush="White" ItemsSource="{Binding listOfAppointmentTime}" ></ComboBox>

        <Label Grid.Row="7" Content="Soba :" HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="146" FontSize="24" Margin="57,50,0,0" Grid.Column="0" />
        <TextBox Grid.Row="7" Grid.Column="1" Margin="0,46,0,0" Name="roomNumber" IsEnabled="False" FontSize="24"/>

        <Button  Grid.Column="2" Content="Izmeni" Foreground="Black" Background="#FFB6DAD6" HorizontalAlignment="Center" Height="65" Grid.Row="8" VerticalAlignment="Center" Width="219" FontSize="24" Click="changeClick"/>
        <Button Grid.Column="2" Content="Odustani" Foreground="Black" Background="#FFB6DAD6" HorizontalAlignment="Left" Height="65" Margin="644,0,0,0" Grid.Row="8" VerticalAlignment="Center" Width="219" FontSize="24" Click="cancelClick"/>

    </Grid>
</Page>
